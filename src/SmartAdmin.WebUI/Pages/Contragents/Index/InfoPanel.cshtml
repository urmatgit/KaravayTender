@inject Microsoft.Extensions.Localization.IStringLocalizer<IndexModel>  _localizer
@model IndexModel


<div asp-validation-summary="All" class="alert alert-primary text-dark"></div>
<div class="form-group row">

    <div class="col-md-3 mat my-auto ">
        <label class="col-xl-12 form-label ">@_localizer["Name"] <span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <input type="text" asp-for="Input.Name" class="form-control" placeholder=@_localizer["Name"] />
        <span class="invalid-feedback" asp-validation-for="Input.Name"></span>
    </div>

</div>
<div class="form-group row">

    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Full name"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <input type="text" asp-for="Input.FullName" class="form-control" placeholder=@_localizer["Full name"] />
        <span class="invalid-feedback" asp-validation-for="Input.FullName"></span>
    </div>

</div>
<div class="form-group row">

    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["INN"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="@(Settings.Theme.IconPrefix) fa-scanner-touchscreen width-1 text-align-center"></i></span>
            </div>
            <input type="text" placeholder="" asp-for="Input.INN" data-inputmask="'mask': '999999999999'" class="form-control">
        </div>
        <span class="help-block">e.g "999999999999"</span>
        <span class="invalid-feedback" asp-validation-for="Input.INN"> </span>
    </div>

</div>

<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["KPP"]</label>
    </div>
    <div class="col-md-9">
        <input type="text" asp-for="Input.KPP" class="form-control" placeholder=@_localizer["KPP"] />
        <span class="invalid-feedback" asp-validation-for="Input.KPP"> </span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Site"]</label>
    </div>
    <div class="col-md-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="@(Settings.Theme.IconPrefix) fa-desktop width-1 text-align-center"></i></span>
            </div>
            <input type="text" asp-for="Input.Site" class="form-control" placeholder="" data-inputmask="'alias': 'url'" />
        </div>
        <span class="help-block">http:// or ftp://</span>

        <span class="invalid-feedback" asp-validation-for="Input.Site"> </span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Phone"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="@(Settings.Theme.IconPrefix) fa-phone width-1 text-align-center"></i></span>
            </div>
            <input type="text" asp-for="Input.Phone" data-inputmask="'mask': '+7 (999) 999-9999'" class="form-control" placeholder="" />
        </div>

        <span class="help-block">+7 (999) 999-9999</span>
        <span class="invalid-feedback" asp-validation-for="Input.Phone"> </span>
    </div>

</div>
<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Contact person"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <input type="text" asp-for="Input.ContactPerson" class="form-control" placeholder=@_localizer["Contact person"] />

        <span class="invalid-feedback" asp-validation-for="Input.ContactPerson"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Contact person phone"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="@(Settings.Theme.IconPrefix) fa-phone-square-alt width-1 text-align-center"></i></span>
            </div>
            <input type="text" asp-for="Input.ContactPhone" class="form-control" placeholder="" data-inputmask="'mask': '+7 (999) 999-9999'" />

        </div>

        <span class="help-block">+7 (999) 999-9999</span>
        <span class="invalid-feedback" asp-validation-for="Input.ContactPhone"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="form-label" asp-for="Input.Email">@_localizer["Email"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="@(Settings.Theme.IconPrefix) fa-mouse-pointer width-1 text-align-center"></i></span>
            </div>
            <input type="text" asp-for="Input.Email" placeholder="" data-inputmask="'alias': 'email'" class="form-control">
        </div>
        <span class="help-block">xx@@xxx.xx</span>
        @*<input type="email" asp-for="Input.Email" class="form-control" placeholder=@_localizer["Email"] value="" data-inputmask="'alias': 'email'" />*@
        <span class="invalid-feedback" asp-validation-for="Input.Email"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3 mat my-auto">
        <label class="col-xl-12 form-label">@_localizer["Type of activity"]<span class="text-danger">*</span></label>
    </div>
    <div class="col-md-9">
        <input type="text" asp-for="Input.TypeOfActivity" class="form-control" placeholder=@_localizer["Type of activity"] />
        <span class="invalid-feedback" asp-validation-for="Input.TypeOfActivity"></span>
    </div>
</div>
