@using CleanArchitecture.Razor.Domain.Enums

@model SmartAdmin.WebUI.Pages.DemoMasterDetail.IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<IndexModel> _localizer
<div class="modal fade" id="customer_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="@(Settings.Theme.IconPrefix) fa-times"></i></span>
                </button>
            </div>
            <form id="customer_form" class="needs-validation" novalidate="novalidate">
                <div class="modal-body">
                    <ul class="nav nav-tabs " role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab">@_localizer["Main"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_2" role="tab">@_localizer["Group 1"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_3" role="tab">@_localizer["Group 2"]</a>
                        </li>
                    </ul>
                    <div class="tab-content p-2">
                        <div class="tab-pane fade show active" id="tab_1" role="tabpanel">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="InputCustomer.Id" />
                            
                            <div class="form-row">
                                <div class="col-md-6">
                                    
                                    <label class="form-label" for="name">@_localizer["Name"] <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="InputCustomer.Name" class="form-control" placeholder="Customer Name"   />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Name"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="nameOfEnglish">@_localizer["Name Of English"] </label>
                                    <input type="text" asp-for="InputCustomer.NameOfEnglish" class="form-control" placeholder="Customer Name of English" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.NameOfEnglish"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="GroupName">@_localizer["Group Name"] <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="InputCustomer.GroupName" class="form-control" placeholder="Group Name"   />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.GroupName"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="PartnerType">@_localizer["Partner Type"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="InputCustomer.PartnerType" class="custom-select" asp-items="Html.GetEnumSelectList<PartnerType>()"  >
                                        <option value="">@_localizer["Choose Partner Type"]</option>
                                    </select>
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.PartnerType"></span>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab_2" role="tabpanel">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label class="form-label" for="GroupName">@_localizer["Region"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="InputCustomer.Region" class="custom-select" asp-dictionaries-for="Region" placeholder="Region"  >
                                        <option value="">@_localizer["Choose Region"]</option>
                                    </select>
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Region"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="Sales">@_localizer["Sales"] <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="InputCustomer.Sales" class="form-control" placeholder="Sales"   />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Sales"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="RegionSalesDirector">@_localizer["Region Sales Director"] <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="InputCustomer.RegionSalesDirector" class="form-control" placeholder="Region Sales Director"   />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.RegionSalesDirector"></span>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab_3" role="tabpanel">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <label class="form-label" for="Address">@_localizer["Address"] </label>
                                    <input type="text" asp-for="InputCustomer.Address" class="form-control" placeholder="Address" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Address">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="Sales">@_localizer["Address Of English"] </label>
                                    <input type="text" asp-for="InputCustomer.AddressOfEnglish" class="form-control" placeholder="Address Of English" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.AddressOfEnglish">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="Contract">@_localizer["Contact"] </label>
                                    <input type="text" asp-for="InputCustomer.Contact" class="form-control" placeholder="Contract" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Contact">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="Email">@_localizer["Email"] </label>
                                    <input type="text" asp-for="InputCustomer.Email" class="form-control" placeholder="Email" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Email">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="PhoneNumber">@_localizer["Phone Number"] </label>
                                    <input type="text" asp-for="InputCustomer.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.PhoneNumber">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="Fax">@_localizer["Fax"] </label>
                                    <input type="text" asp-for="InputCustomer.Fax" class="form-control" placeholder="Fax" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Fax">Sorry, you missed this one.</span>
                                </div>
                                <div class="col-md-12">
                                    <label class="form-label" for="Comments">@_localizer["Comments"] </label>
                                    <input type="text" asp-for="InputCustomer.Comments" class="form-control" placeholder="Comments" />
                                    <span class="invalid-feedback" asp-validation-for="InputCustomer.Comments">Sorry, you missed this one.</span>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@_localizer["Close"]</button>
                    <button type="submit" class="btn btn-primary">@_localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
