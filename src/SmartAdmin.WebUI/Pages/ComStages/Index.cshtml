<div id="js-page-content-demopanels" class="card mb-g">
    <div class="card-header bg-white d-flex align-items-center">
        <div class="col-md-3">
            <h5>@_localizerStage["Stage"] 1</h5>
        </div>
        <div class="col-md-6">
            <div class="custom-control custom-radio-rounded custom-control-inline">
                <input type="radio" class="custom-control-input" asp-for="TypeOffer" checked="" value="0">
                <label class="custom-control-label" for="defaultInline1Radio">@_localizerStage["Last offer"]</label>
            </div>
            <div class="custom-control custom-radio-rounded custom-control-inline">
                <input type="radio" class="custom-control-input" asp-for="TypeOffer" value="1">
                <label class="custom-control-label" for="defaultInline2Radio">@_localizerStage["Step-by-Step offer"]</label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="ml-auto">

                @if (_canSearch.Succeeded)
                {
                    <a role="button" class="btn btn-sm btn-outline-primary" id="participant_searchbutton">
                        <span class="@(Settings.Theme.IconPrefix) fa-search mr-1"></span>
                        @_localizer["Search"]
                    </a>
                }


            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table id="comstage_dg">
                </table>
            </div>
        </div>
    </div>
</div>
