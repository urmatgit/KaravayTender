@model SmartAdmin.WebUI.Pages.Nomenclatures.IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<IndexModel> _localizer
<div class="modal fade" id="edit_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="@(Settings.Theme.IconPrefix) fa-times"></i></span>
                </button>
            </div>
            <form id="edit_form" class="needs-validation" novalidate="novalidate">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.Id" />

                    <ul class="nav nav-tabs nav-justified" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-info-square mr-1"></i> @_localizer["Nomenclature"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab_2" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-file mr-1"></i> @_localizer["Specification"]</a>
                        </li>
                    </ul>
                    <div class="tab-content border border-top-0 p-3">
                        <div class="tab-pane fade show p-3 active" id="tab_1" role="tabpanel">
                            <div asp-validation-summary="All" class="alert alert-primary text-dark"></div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <label class="form-label" for="name">@_localizer["Name"] <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="Input.Name" class="form-control" placeholder="@_localizer["Name"]" />
                                    <span class="invalid-feedback" asp-validation-for="Input.Name"></span>
                                </div>

                                @*<div class="col-md-12">
                <label class="form-label" for="Comments">@_localizer["Description"] </label>
                <input type="text" asp-for="Input.Description" class="form-control" placeholder="Comments" />
                <span class="invalid-feedback" asp-validation-for="Input.Description"></span>
            </div>*@
                            </div>
                            <div class="form-row">

                                <div class="col-md-6">
                                    <label class="form-label" for="name">@_localizer["Direction"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="Input.DirectionId" asp-items="Model.Directions" class="custom-select" placeholder="@_localizer["Direction"]" data-val-required="Не выбрано 'Направление'">
                                        <option value="">@_localizer["Choose a direction"]</option>
                                    </select>

                                    <span class="invalid-feedback" asp-validation-for="Input.DirectionId"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="name">@_localizer["Category"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="Input.CategoryId" asp-items="Model.Categories" class="custom-select" placeholder="@_localizer["Category"]" data-val-required="Не выбрано 'Категория'">
                                        <option value="">@_localizer["Choose a category"]</option>
                                    </select>

                                    <span class="invalid-feedback" asp-validation-for="Input.CategoryId"></span>
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="col-md-6">
                                    <label class="form-label" for="name">@_localizer["UnitOf"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="Input.UnitOfId" asp-items="Model.UnitOfs" class="custom-select" placeholder="@_localizer["UnitOf"]" data-val-required="Не выбрано 'Ед. измерения'">
                                        <option value="">@_localizer["Choose a UnitOf"]</option>
                                    </select>

                                    <span class="invalid-feedback" asp-validation-for="Input.UnitOfId"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="VatId">@_localizer["VAT,%"] <span class="text-danger">*</span></label>
                                    <select type="text" asp-for="Input.VatId" asp-items="Model.Vats" class="custom-select" placeholder="@_localizer["VAT,%"]" data-val-required="Не выбрано 'НДС'">
                                        <option value="">@_localizer["Choose a vat"]</option>
                                    </select>

                                    <span class="invalid-feedback" asp-validation-for="Input.VatId"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12">
                                    <label class="form-label">@_localizer["Quality documents"] <span class="text-danger">*</span></label>
                                    <select class="select2" multiple="multiple" asp-items="Model.QualityDocs" id="QualityDocsIds" asp-for="Input.QualityDocsIds" required>
                                        <option value="">@_localizer["Choose quality documents"]</option>
                                    </select>
                                    <span class="invalid-feedback" asp-validation-for="Input.QualityDocsIds"></span>
                                </div>
                            </div>
                            <div class="form-row">

                                <div class="col-md-6">
                                    <label class="form-label" for="Volume">@_localizer["Volume"] <span class="text-danger">*</span></label>
                                    <input type="number" asp-for="Input.Volume" class="form-control" placeholder="@_localizer["Average volume"]" step="0.1" />
                                    <span class="invalid-feedback" asp-validation-for="Input.Volume"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="Archive">@_localizer["Archive"] </label>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" asp-for="Input.Archive" class="custom-control-input" />
                                        <label class="custom-control-label" for="Input_Archive"></label>

                                    </div>
                                    <span class="invalid-feedback" asp-validation-for="Input.Archive"></span>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane fade show p-3" id="tab_2" role="tabpanel">
                            <partial name="../Nomenclatures/FilesPanel" />
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@_localizer["Close"]</button>
                    <button type="submit" class="btn btn-primary">@_localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
