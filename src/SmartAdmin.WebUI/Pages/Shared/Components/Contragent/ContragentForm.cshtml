
@model CleanArchitecture.Razor.Application.Features.Contragents.Commands.AddEdit.AddEditContragentCommand
@inject Microsoft.Extensions.Localization.IStringLocalizer<ContragentForm>  _localizer
@{
    SelectList DirectionList = @ViewData["Directions"] as SelectList;
}
<form id="js-login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-user mr-1"></i> @_localizer["Contragent Info"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab_2" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-info-square mr-1"></i> @_localizer["Category"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab_3" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-file mr-1"></i> @_localizer["Files"]</a>
        </li>
        <!--For manager-->
        <li class="nav-item" style="display:none">
            <a class="nav-link" data-toggle="tab" href="#tab_4" role="tab"><i class="@(Settings.Theme.IconPrefix) fa-check-square mr-1"></i> @_localizer["Accreditation"]</a>
        </li>
    </ul>
    <div class="tab-content border border-top-0 p-3">
        <div class="tab-pane fade show p-3 active" id="tab_1" role="tabpanel">
            <partial name="../Shared/Components/Contragent/InfoPanel" model="Model" />
        </div>
        <div class="tab-pane fade show p-3" id="tab_2" role="tabpanel">
            <partial name="../Shared/Components/Contragent/CategoryPanel" model="Model" />
       
       

        </div>
        <div class="tab-pane fade show" id="tab_3" role="tabpanel">
            <p> tab3</p>
        </div>
        <div class="tab-pane fade " id="tab_4" role="tabpanel">
            <p> tab4</p>
        </div>
    </div>



</form>
