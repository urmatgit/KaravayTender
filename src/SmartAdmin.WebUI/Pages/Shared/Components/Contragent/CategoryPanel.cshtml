@inject Microsoft.Extensions.Localization.IStringLocalizer<ContragentForm>  _localizer
@model CleanArchitecture.Razor.Application.Features.Contragents.Commands.AddEdit.AddEditContragentCommand
<div asp-validation-summary="All" class="alert alert-primary text-dark"></div>
<div class="form-group row">

    <div class="col-md-2 mat my-auto">
        <label class="form-label" for="name">@_localizer["Service"]</label>

    </div>
    <div class="col-md-10">

        <div class="custom-control custom-checkbox">
            <input type="checkbox" asp-for="IsService" class="custom-control-input" value="true">
            <label class="custom-control-label" for="InputContragent_IsService"></label>
        </div>

        <span class="invalid-feedback" asp-validation-for="IsService"></span>
    </div>
</div>

<div class="form-group row">

    <div class="col-md-2 mat my-auto">
        <label class="form-label" for="name">@_localizer["Direction"] <span class="text-danger">*</span></label>

    </div>
    <div class="col-md-10">

        <select type="text" asp-for="DirectionId" asp-items="@((SelectList)ViewData["Directions"])" class="custom-select" placeholder="@_localizer["Direction"]">
            <option value="">@_localizer["Choose direction"]</option>
        </select>
        <span class="invalid-feedback" asp-validation-for="DirectionId"></span>
    </div>

</div>
